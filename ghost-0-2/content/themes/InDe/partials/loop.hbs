{{! This is the post loop - each post will be output using this markup }}
<div id="posts-container">
    {{#foreach posts}}
    <article class="{{post_class}}">
        <header class="post-header">
        </header>
        <footer class="post-meta">
            {{#if author.image}}<a href="{{url}}"><img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin"/></a>{{/if}}
            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
            <span id="by">by</span><span id="author-name"> {{author}}</span>
            <time class="post-date" id="daysago-date" datetime="{{date published_at timeago="true"}}">{{date published_at timeago="true"}}</time>
            <section class="post-excerpt">
                <!--<p>{{excerpt characters="140"}} <a class="read-more" href="{{url}}">&raquo;</a></p>-->
                <p class="line-clamp line-clamp-3"><a class="read-more" href="{{url}}">{{excerpt}}</a></p>
            </section>
            <!--{{tags prefix=" on "}}-->
        </footer>
    </article>
    {{/foreach}}
</div>
{{! Previous/next page links - displayed on every page }}
<div id=pages>
    {{pagination}}
</div>